          <mesh filename="${meshes}/arm/abductor.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
    </link>
    <link name="arm_retractor">
      <inertial>
        <origin xyz="-0.011027322351092845 -5.220911472792085e-05 0.023364114206742087" rpy="0 0 0"/>
