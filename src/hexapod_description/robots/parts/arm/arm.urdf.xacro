      </inertial>
      <visual>
        <origin xyz="-0.025676 -0.000576 -0.07485" rpy="0 0 0"/>
        <geometry>
          <mesh filename="${meshes}/arm/rotator.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="dark"/>
      </visual>
      <collision>
        <origin xyz="-0.025676 -0.000576 -0.07485" rpy="0 0 0"/>
        <geometry>
          <mesh filename="${meshes}/arm/rotator.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
    </link>
    <link name="arm_abductor">
