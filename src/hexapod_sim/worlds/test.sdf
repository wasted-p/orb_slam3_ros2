
<?xml version="1.0" ?>
<sdf version="1.8">
  <world name="default">

    <model name="thermal_camera_model">
      <static>true</static>
      <pose>0 0 1 0 0 0</pose>

      <link name="thermal_link">
        <sensor name="thermal_camera_8bit" type="thermal">
          <always_on>true</always_on>
          <update_rate>30</update_rate>
          <visualize>true</visualize>

          <camera>
            <horizontal_fov>1.047</horizontal_fov>
            <image>
              <width>320</width>
              <height>240</height>
              <format>L8</format>
            </image>
            <clip>
              <near>0.1</near>
              <far>100.0</far>
            </clip>
          </camera>

          <plugin name="gz::sim::systems::ThermalSensor"
                  filename="gz-sim-thermal-sensor-system">
            <min_temp>273.15</min_temp>
            <max_temp>373.15</max_temp>
            <resolution>5.0</resolution>
          </plugin>
        </sensor>
      </link>
    </model>

  </world>
</sdf>
